<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Reason</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.reason %></td>
        <td><%= transaction.short_description %></td>
        <td class="price"><%= '%.2f' % transaction.price %></td>
        <td><%= link_to '📊', transaction %></td>
        <td><%= link_to '✏️', edit_transaction_path(transaction) %></td>
        <td><%= link_to '❌', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @transactions %>

<br>

<%= link_to 'New Transaction', new_transaction_path, class: 'button reversed'%>
